<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basicColor"
    tools:context=".Pengaturan">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:clickable="true"
            android:id="@+id/privacy_view"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="@drawable/border_line_profile"
            android:src="@color/white"
            android:backgroundTint="@color/basicColor"
            />

        <ImageView
            android:clickable="true"
            android:layout_below="@+id/privacy_view"
            android:id="@+id/login_security_view"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="@drawable/border_line_profile"
            android:src="@color/white"
            android:backgroundTint="@color/basicColor"
            />

        <ImageView
            android:layout_below="@+id/login_security_view"
            android:id="@+id/notification_setting"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="@drawable/border_line_profile"
            android:src="@color/white"
            android:backgroundTint="@color/basicColor"
            />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="38dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/privacy_logo" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_marginLeft="8dp"
            android:layout_width="38dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="69dp"
            android:src="@drawable/ic_security_black_24dp" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="38dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/notification_logo" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView10"
            android:layout_marginTop="82dp"
            android:text="Privacy Setting" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView11"
            android:layout_marginTop="143dp"
            android:text="Notification Setting" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="75dp"
            android:layout_marginTop="20dp"
            android:text="Login and Security Setting" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switchNotif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView10"
            android:layout_marginEnd="15dp"
            android:checked="true"
            />

    </RelativeLayout>
</FrameLayout>