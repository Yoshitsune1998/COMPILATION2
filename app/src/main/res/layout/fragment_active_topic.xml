<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Topic">

    <RelativeLayout
        android:id="@+id/topicFullTemplate"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/post_view"
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/topicImage_a"
                android:layout_width="328dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:adjustViewBounds="true"
                android:background="@drawable/border_line_topic"
                android:scaleType="fitXY"
                android:src="@drawable/post1" />

            <TextView
                android:id="@+id/topicText_a"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="277dp"
                android:layout_height="111dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="51dp"
                android:text="Belajar Android Studio"
                android:textColor="@color/white"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/topicImage_a"
                android:layout_below="@+id/topicName_a"
                android:text="Posted on :" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/topicImage_a"
                android:layout_marginTop="193dp"
                android:text="Posted by :" />

            <TextView
                android:id="@+id/topicName_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/textView4"
                android:layout_marginStart="109dp"
                android:text="Abdul Yasir" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/topicName_a"
                android:layout_alignTop="@+id/textView2"
                android:text="9 November 2018" />

        </RelativeLayout>

        <!--COMMENTS BELOW-->

        <include
            layout="@layout/comment_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="33dp"></include>

        <include
            layout="@layout/comment_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_view"
            android:layout_margin="15dp"></include>

    </RelativeLayout>

</FrameLayout>