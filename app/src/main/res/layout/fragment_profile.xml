<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:id="@+id/profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/border_line_profile"
            android:id="@+id/profile_template">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/user_defaut_pic" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="101dp"
                android:layout_height="46dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/imageView"
                android:layout_marginTop="135dp"
                android:text="Abdul Yasir"
                android:textAlignment="center"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignStart="@+id/imageView5"
                android:layout_alignTop="@+id/textView"
                android:src="@drawable/button_default" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="19dp"
                android:layout_marginTop="60dp"
                android:src="@drawable/button_default" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/imageView4"
                android:layout_marginTop="145dp"
                android:text="Buat Post Baru"
                android:textAlignment="center"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="44dp"
                android:layout_marginTop="73dp"
                android:text="Edit Profil"
                android:textAlignment="center"
                android:textSize="12dp" />

        </RelativeLayout>

        <TextView
            android:layout_below="@+id/profile_template"
            android:layout_marginTop="10dp"
            android:id="@+id/text_didiskusikan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Topik yang Didiskusikan"/>

        <include
            android:id="@+id/discussed_topic"
            layout="@layout/topic_beranda"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/text_didiskusikan"
            android:layout_width="350dp"
            android:layout_height="150dp"
            ></include>

    </RelativeLayout>

</FrameLayout>