<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bantuan"
    android:background="@color/basicColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/help1"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/border_line_profile"
                android:clickable="true"
                android:src="@color/white" />

            <ImageView
                android:layout_width="38dp"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_help_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="70dp"
                android:text="Bagaimana cara membuat post?" />

            <ImageView
                android:clickable="true"
                android:id="@+id/ddb1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="13dp"
                android:src="@drawable/dropdownbutton" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/help1a">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/border_line_profile"
                android:clickable="true"
                android:src="@color/white" />

            <TextView
                android:layout_width="343dp"
                android:layout_height="34dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:text="Pergi ke halaman profil dan tekan tombol buat post, atau bisa menekan tombol (+) pada beranda" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/help2"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:background="@drawable/border_line_profile"
                android:clickable="true"
                android:src="@color/white" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="38dp"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_help_black_24dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="72dp"
                android:text="Bagaimana cara mengedit profile?" />

            <ImageView
                android:id="@+id/ddb2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="13dp"
                android:src="@drawable/dropdownbutton"
                android:clickable="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/help2a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/border_line_profile"
                android:clickable="true"
                android:src="@color/white" />

            <TextView
                android:layout_width="343dp"
                android:layout_height="34dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:text="Pergi ke halaman profile dan tekan tombol edit profil" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/help3"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:background="@drawable/border_line_profile"
                android:clickable="true"
                android:src="@color/white" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="38dp"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_help_black_24dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="313dp"
                android:layout_height="31dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="Bagaimana cara login?" />

            <ImageView
                android:clickable="true"
                android:id="@+id/ddb3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="13dp"
                android:src="@drawable/dropdownbutton" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/help3a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/border_line_profile"
                android:clickable="true"
                android:src="@color/white" />

            <TextView
                android:layout_width="343dp"
                android:layout_height="34dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:text="Pastikan anda telah mendaftar pada aplikasi kami, dan masukkan username beserta password anda" />

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>